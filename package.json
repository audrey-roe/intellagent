{
  "name": "intellagent-server",
  "version": "0.0.1",
  "engines": {
    "node": "14.16.1"
  },
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www.js",
    "server:dev": "nodenv --exec ./dist-server/bin/www.js",
    "dev": "cross-env NODE_ENV=development npm-run-all build server:dev",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "passport:install": "node generate_keys.js",
    "heroku-postbuild": "npm run passport:install"
  },
  "dependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "@babel/runtime": "^7.14.0",
    "bson": "^4.3.0",
    "compose-middleware": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-jwt": "^6.0.0",
    "express-validator": "^6.10.1",
    "faker": "^5.5.3",
    "jsonwebtoken": "^8.5.1",
    "mongo-seeding": "^3.6.0",
    "mongo-seeding-cli": "^3.6.0",
    "mongoose": "^5.12.7",
    "morgan": "~1.9.1",
    "nanoid": "^3.1.22",
    "node-env-run": "^4.0.2",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "rimraf": "^3.0.2",
    "socket.io": "^4.0.2",
    "twitter-autohook": "^1.7.2",
    "twitter-lite": "^1.1.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
